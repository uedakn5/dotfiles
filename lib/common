export PATH=$PATH:$HOME/bin

case "${OSTYPE}" in
  darwin*)
    alias ls="ls -CFG"
    alias ll="ls -lFhG"
    alias la="ls -CFalG"
    ;;
  linux*)
    alias ls='ls -CF --color'
    alias ll='ls -lFh --color'
    alias la='ls -CFal --color'
    ;;
esac

alias v='vim'
alias vi='vim'
alias view='view -M'
alias so='source'
alias cdp='cd -P'

mybkupdb () {
	v_datetime=$(date "+%Y%m%d_%H%M%S")
	mysqldump -u $1 -p -h $2 --routine $3 > ${4:-$3}_${v_datetime}.sql
}
